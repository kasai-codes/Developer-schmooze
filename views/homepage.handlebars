{{#each posts as |post|}}
<div class="row mb-4 post"style="border: black 1px solid;">
  <div class="col-md-5" >


    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>


    <p>
      <span style="margin-right:20px;">
       Post created by:  {{user.username}}
      </span>
      <span style="margin-right:20px;">
        {{format_date createdAt}}
      </span>
    </p>

  </div>


  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>

  </div>
</div>
{{/each}}