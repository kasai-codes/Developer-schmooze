<div class="row m-3 login-form">
  <form id="signup-form" class="col col-lg-6 col-sm-8 col-xs-12 mx-auto signup-form rounded-3  m-2 ">
    <div class="userCreateValidation d-none"></div>
    <h2 class="text-start pt-2 pb-4 border-bottom border-3 text-center" >Existing users login</h2>

    <div class>
      <label for="username-login" class="form-label">Username</label>
      <input id="username-login" type="text" class="form-control username-login" />

    </div>
    <div class="col-md-12">
      <label for="password-login" class="form-label">Password</label>
      <input id="password-login" type="password" class="form-control password-login" />

    </div>

    <div class="gy-3 py-3 my-3 text-center">
      <button type="submit" class="btn submitBtn btn-lg btn-dark" style="color:white">Login</button>
      <a href="/signup" class="btn btn-lg  btn-primary" role="button" aria-disabled="true">Sign up</a>

    </div>

  </form>

</div>

<script src="/js/login.js"></script>